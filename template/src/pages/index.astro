---
import Layout from "../components/Layout.astro";
import { getUserFromAstro } from "../utils/auth";
const user = await getUserFromAstro(Astro);
---

<Layout title="首页">
  <section class="min-h-screen flex items-center justify-center py-20">
    <div class="w-full max-w-2xl px-4">
      <div class="card bg-base-100 border border-base-300 shadow">
        <div class="card-body">
          {user ? (
            <div>
              <h2 class="card-title">欢迎，{user.username}</h2>
              <p>这是你的首页。你可以继续完善内容或开始记录。</p>
              <div class="card-actions">
                <button id="logoutBtn" class="btn btn-outline">退出登录</button>
              </div>
            </div>
          ) : (
            <div>
              <h2 class="card-title">Hello World</h2>
              <p>欢迎体验。</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>
